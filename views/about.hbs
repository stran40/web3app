<div class="row">
	<div class="col-md-12">
		<h3>Leave a Comment</h3>
		<div class="well">
			<div class="row">
				<div class="col-md-12">

					<form method="post" action="/about/addComment">
						<fieldset>
							<!--row 1-->
							<div class="row">
								<div class="col-md-6">
									<div class="form-group">
										<input class="form-control" id="authorName" name="authorName" type="text" placeholder="Name" />
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-group">
										<input class="form-control" id="authorEmail" name="authorEmail" type="email" placeholder="Email" />
									</div>
								</div>
							</div>

							<!-- row 2 -->
							<div class="row">
								<div class="col-md-12">
									<div class="form-group">
										<input class="form-control" id="subject" name="subject" type="text" placeholder="Subject"/>
									</div>
								</div>
							</div>

							<!-- row 3 -->
							<div class="row">
								<div class="col-md-12">
									<div class="form-group">
										<input class="form-control" id="commentText" name="commentText" type="textarea" placeholder="Comment"/>
									</div>
								</div>
							</div>
						</fieldset>
						<hr />
						<button type="submit" class="btn btn-primary pull-right"  />Comment</button>
					</form>

					</div>
				</div>
			</div>
		</div>
	</div>
	{{#if data}}
	<div class="row">
		<div class="col-md-12">
			<h3>All Comments</h3>
			<hr />
		</div>
	</div>
	{{/if}} {{#each data}}
	<div class="row">
		<div class="col-md-12">
			<div class="well">
				<h3>{{subject}}</h3>
				<div class="row">
					<div class="col-md-12">
						{{commentText}}
						<br /><br />
						Posted on: {{postedDate}} by <a href="mailto:{{authorEmail}}">{{authorName}}</a>

					</div>
				</div>
				{{#each replies}}
				<div class="row">
					<div class="col-md-12">
						<div class="well">
							
							{{commentText}}
							<br /><br />
							Posted on: {{repliedDate}} by <a href="mailto:{{authorEmail}}">{{authorName}}</a>
							
						</div>
					</div>
				</div>
				{{/each}}
				<div class="row">
					<div class="col-md-12">
						<button class="btn btn-primary btn-sm pull-right" data-toggle="collapse" data-target="#reply-{{_id}}" aria-expanded="false">Reply</button>
					</div>
				</div>
			</div>
			<!-- reply table -->
			<div class="collapse" id="reply-{{_id}}">
				<div class="well">
					<div class="row">
						<div class="col-md-12">
							<form method="post" action="/about/addReply">
								<fieldset>
									<!--row 1-->
									<div class="row">
										<div class="col-md-6">
											<div class="form-group">
												<input class="form-control" id="authorName" name="authorName" type="text" placeholder="Name" />
											</div>
										</div>
										<div class="col-md-6">
											<div class="form-group">
												<input class="form-control" id="authorEmail" name="authorEmail" type="email" placeholder="Email" />
											</div>
										</div>
									</div>

									<!-- row 2 -->
									<div class="row">
										<div class="col-md-12">
											<div class="form-group">
												<input class="form-control" id="commentText" name="commentText" type="textarea" placeholder="Comment"/>
											</div>
										</div>
									</div>

									<input type="hidden" name="comment_id" id="comment_id" value="{{_id}}" />

								</fieldset>
								<hr />
								<button type="submit" class="btn btn-primary pull-right"  />Reply</button>
							</form>
					
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	{{/each}}