{{#if !successMessage}}


<div class="row">
    <div class="col-md-12">
        <h1>Register User</h1>
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        {{#if errorMsg}}
            <div class="alert alert-danger"> <strong>Error:</strong> {{errorMessage}}</div>
        {{/if}}
        <div class="well">
            <form action="/register" method="POST">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input class="form-control" id="user" name="user" type="text" placeholder="User Name" required value="" />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input class="form-control" id="password" name="password" type="password" placeholder="Password" required />
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <input class="form-control" id="password2" name="password2" type="password" placeholder="Confirm Password" required />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
{{/if}}