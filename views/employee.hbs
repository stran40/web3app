<div class="row">
    <div class="col-md-12">
        {{#each data}} 
        <h2>{{firstName}} {{lastName}} - Employee: {{employeeNum}}</h2>
        
            <form method="post" action="/employee/update">
                <fieldset>
                    <legend>Personal Information</legend>

                    <!-- row 1 -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="firstName">First Name:</label>
                                <input class="form-control" id="firstName" name="firstName" type="text" value="{{firstName}}" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="lastName">Last Name:</label>
                                <input class="form-control" id="lastName" name="last_name" type="text" value="{{lastName}}" />
                            </div>
                        </div>
                    </div>
                
                  
                    <!-- row 2 -->
                    <div class="row">
                       <div class="col-md-6">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input class="form-control" id="email" name="email" type="email" value="{{email}}"  />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="ssn">Social Security Num:</label>
                                <input class="form-control" id="ssn" name="ssn" type="text" value="{{ssn}}" />
                            </div>
                        </div>
                    </div>
                    <!-- row 3 -->
                    <div class="row">
                       <div class="col-md-3">
                            <div class="form-group">
                                <label for="addressStreet">Address (Street):</label>
                                <input class="form-control" id="addressStreet" name="addressStreet" type="text"  value="{{addressStreet}}" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="addresCity">Address (City):</label>
                                <input class="form-control" id="addresCity" name="addresCity" type="text"  value="{{addresCity}}" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="addressState">Address (State):</label>
                                <input class="form-control" id="addressState" name="addressState" type="text"  value="{{addressState}}" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="addressPostal">Address (Zip Code):</label>
                                <input class="form-control" id="addressPostal" name="addressPostal" type="text"  value="{{addressPostal}}" />
                            </div>
                        </div>

                    </div>
                </fieldset> <!-- end of personal info fieldset -->
                <fieldset>
                    <legend>Company Information</legend>
                    <!-- row 1 -->
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="isManager">Manager:</label>
                                <input class="form-control" type="checkbox" id="isManager" name="isManager"  value="{{isManager}}" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="employeeManagerNum">Employee's Manager Number:</label>
                                <input class="form-control" id="employeeManagerNum" name="employeeManagerNum" type="text"  value="{{employeeManagerNum}}"  />
                            </div>
                        </div>
                         <div class="col-md-3">
                            <div class="form-group">
                                <label for="status">Status:</label>
                                <input type="radio" class="form-control" id="fullTimeStatus" name="status" value="Full Time"  
                                        {{#if isManager}} checked="checked" {{/if}} /> Full Time
                                <input type="radio" class="form-control" id="partTimeStatus" name="status" value="Part Time"    /> Part Time
                            </div>
                        </div>
                         <div class="col-md-3">
                            <div class="form-group">
                                <label for="department">Department:</label>
                                <select class="form-control" name="department" id="department">
                                    <option value="1" {{#equal department "1" }}selected{{/equal}} >1</option>
                                    <option value="2" {{#equal department "2" }}selected{{/equal}}>2</option>
                                    <option value="3" {{#equal department "3" }}selected{{/equal}}>3</option>
                                    <option value="4" {{#equal department "4" }}selected{{/equal}}>4</option>
                                    <option value="5" {{#equal department "5" }}selected{{/equal}}>5</option>
                                    <option value="6" {{#equal department "6" }}selected{{/equal}}>6</option>
                                    <option value="7" {{#equal department "7" }}selected{{/equal}}>7</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <!-- row 2 -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="hireDate">Hire Date</label>
                                <input class="form-control" id="hireDate" name="hireDate" type="text" value="{{hireDate}}" readonly  >
                            </div>
                        </div>
                    </div>
                </fieldset>
                <hr />
                <input type="submit" class="btn btn-primary pull-right" value="Update Employee" /><br /><br /><br />
            </form>
            {{/each}}
    </div>
</div>