<div class="row">
    <div class="col-md-12">

        <h2>{{viewData.data.firstName}} {{viewData.data.last_name}} - Employee: {{viewData.data.employeeNum}}</h2>
        
            <form method="post" action="/employee/update">
                <fieldset>
                    <legend>Personal Information</legend>
                    <!-- row 1 -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                  <input class="form-control" name="employeeNum" type="hidden" value="{{viewData.data.employeeNum}}" />
                                <label for="firstName">First Name:</label>
                                <input class="form-control" id="firstName" name="firstName" type="text" value="{{viewData.data.firstName}}" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="last_name">Last Name:</label>
                                <input class="form-control" id="last_name" name="last_name" type="text" value="{{viewData.data.last_name}}" />
                            </div>
                        </div>
                    </div>
                
                  
                    <!-- row 2 -->
                    <div class="row">
                       <div class="col-md-6">
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input class="form-control" id="email" name="email" type="email" value="{{viewData.data.email}}"  />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="SSN">Social Security Num:</label>
                                <input class="form-control" id="SSN" name="SSN" type="text" value="{{viewData.data.SSN}}" disabled/>
                            </div>
                        </div>
                    </div>
                    <!-- row 3 -->
                    <div class="row">
                       <div class="col-md-3">
                            <div class="form-group">
                                <label for="addressStreet">Address (Street):</label>
                                <input class="form-control" id="addressStreet" name="addressStreet" type="text"  value="{{viewData.data.addressStreet}}" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="addresCity">Address (City):</label>
                                <input class="form-control" id="addresCity" name="addresCity" type="text"  value="{{viewData.data.addresCity}}" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="addressState">Address (State):</label>
                                <input class="form-control" id="addressState" name="addressState" type="text"  value="{{viewData.data.addressState}}" />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="addressPostal">Address (Zip Code):</label>
                                <input class="form-control" id="addressPostal" name="addressPostal" type="text"  value="{{viewData.data.addressPostal}}" />
                            </div>
                        </div>

                    </div>
                </fieldset> <!-- end of personal info fieldset -->
                <fieldset>
                    <legend>Company Information</legend>
                    <!-- row 1 -->
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="isManager">Manager:</label>
                                <input class="form-control" type="checkbox" id="isManager" name="isManager"  value="{{viewData.data.isManager}}"
                                {{#if viewData.data.isManager}} checked="checked" {{/if}} />
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label for="employeeManagerNum">Employee's Manager Number:</label>
                                <input class="form-control" id="employeeManagerNum" name="employeeManagerNum" type="text"  value="{{viewData.data.employeeManagerNum}}"  />
                            </div>
                        </div>
                         <div class="col-md-3">
                            <div class="form-group">
                                <label for="status">Status:</label>
                                <input type="radio" class="form-control" id="fullTimeStatus" name="status" value="Full Time"  
                                        {{#if viewData.data.statusBool}} checked="checked" {{/if}} /> Full Time
                                <input type="radio" class="form-control" id="partTimeStatus" name="status" value="Part Time"   
                                 {{#unless viewData.data.statusBool}} checked="checked" {{/unless}}  /> Part Time
                            </div>
                        </div>
                         <div class="col-md-3">
                            <div class="form-group">
                                <label for="department">Department:</label>
                               {{#if viewData.departments}}
                                <select class="form-control" name="department" id="department">
                                {{#each viewData.departments}}
                                <option value="{{departmentId}}" {{#if selected}} selected {{/if}} >{{departmentName}} </option>
                                {{/each}}
                                </select>
                                {{else}}
                                <div>No Departments</div>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                    <!-- row 2 -->
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="hireDate">Hire Date</label>
                                <input class="form-control" id="hireDate" name="hireDate" type="text" value="{{viewData.data.hireDate}}" readonly  />
                            </div>
                        </div>
                    </div>
                </fieldset>
                <hr />
                <input type="submit" class="btn btn-primary pull-right" value="Update Employee" /><br /><br /><br />
            </form>
    </div>
</div>